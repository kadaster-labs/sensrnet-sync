{
  "name": "sensrnet-sync-bridge",
  "version": "0.0.6",
  "description": "SensRNet Sync Bridge Component",
  "author": "https://github.com/kadaster-labs/sensrnet-home/blob/master/MAINTAINERS.md",
  "license": "EUPL-1.2",
  "repository": {
    "url": "https://github.com/kadaster-labs/sensrnet-sync"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \\\"src/**/*.ts\\\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \\\"node dist/main.js\\\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \\\"node --inspect-brk dist/main.js\\\"",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "../node_modules/.bin/jest",
    "test:watch": "../node_modules/.bin/jest --watch",
    "test:cov": "../node_modules/.bin/jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register ../node_modules/.bin/jest --runInBand",
    "test:e2e": "../node_modules/.bin/jest --config ./test/jest-e2e.json",
    "uml": "tplant -C --input src/events/**/*.ts --output docs/images/events-uml.svg"
  },
  "dependencies": {
    "@nestjs/common": "^7.3.1",
    "@nestjs/core": "^7.3.1",
    "@nestjs/mongoose": "^7.0.1",
    "@nestjs/platform-express": "^7.3.1",
    "@nestjs/swagger": "^4.5.12",
    "reflect-metadata": "^0.1.13",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.0",
    "mongoose": "^5.9.21",
    "multichain-node": "^2.2.0-version1.0.4",
    "geteventstore-promise": "^3.2.1",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.4.1",
    "@nestjs/schematics": "^7.0.1",
    "@nestjs/testing": "^7.3.1",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.3",
    "@types/mongoose": "^5.7.29",
    "@types/node": "^14.0.14",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.1",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
